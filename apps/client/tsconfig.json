{
  "extends": "@defraud/tsconfig/nextjs",
  "compilerOptions": {
    "paths": {
      // Unfortunately, Next.js does not yet support ${configDir} syntax
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ]
}
