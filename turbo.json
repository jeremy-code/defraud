{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env", ".env"],
  "globalEnv": [
    "NODE_ENV",
    "CF_TURNSTILE_SECRET_KEY",
    "DB_URL",
    "KV_URL",
    "NEXT_PUBLIC_*"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["ANALYZE"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    }
  }
}
