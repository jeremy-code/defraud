{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env", ".env"],
  "globalEnv": ["NODE_ENV", "DB_URL"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["ANALYZE"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:push": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    }
  }
}
